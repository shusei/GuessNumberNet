<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heavener.guessnumbernet.PlayingActivity">

    <ImageView
        android:id="@+id/imageViewPlayer1"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" android:contentDescription="@string/imageViewPlayer1" android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/imageViewPlayer2"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" android:contentDescription="@string/imageViewPlayer2" android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textViewPkayer1"
        android:layout_width="154dp"
        android:layout_height="304dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPlayer1" android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewPlayer2"
        android:layout_width="154dp"
        android:layout_height="304dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPlayer2" android:layout_marginEnd="16dp" />
</android.support.constraint.ConstraintLayout>
